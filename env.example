# ========================================
# GSYM Dashboard - Production Configuration
# ========================================

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Dashboard Customization
DASHBOARD_TITLE=GSYM Dashboard
DASHBOARD_HEADER_TEXT=Real-time Ethereum Node Monitoring
DASHBOARD_FOOTER_TEXT=Powered by GSYM â€¢ Geth + Prysm Monitoring Suite

# Hostname (defaults to system hostname if not set)
HOSTNAME=

# Color Theme: slate, blue, red, orange
DASHBOARD_COLOR_THEME=slate

# Service Configuration
GETH_SERVICE=geth
PRYSM_SERVICE=prysm

# Geth Connection Reporting: lsof, netstat, log
GETH_CONN_REPORTING=lsof

# Optional: External IP detection (leave blank to disable)
# Set to 'true' to enable external IP detection via external service
ENABLE_EXTERNAL_IP=true

# Cache TTL for peer count (seconds)
PEER_CACHE_TTL=3
